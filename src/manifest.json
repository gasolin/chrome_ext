{
  "author": "Gitcoin.co",
  "manifest_version": 2,
  "icons": { "128": "images/icon_128.png" },
  "content_scripts": 
  [
    {
      "matches": [
        "*://*.github.com/*",
        "*://gitcoin.co/api/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "script/pageload/functions.js",
        "script/pageload/body.js",
        "script/pageload/callbacks.js"
      ],
      "run_at": "document_end"
    }
  ],
  "homepage_url": "https://gitcoin.co/",
  "name": "Gitcoin",
  "description": "Push Open Source Forward.  The easiest way to monetize your work in open source software.",
  "version": "0.12",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://gitcoin.co/",
    "*://*.github.com/*"
  ],
  "background":
  {
    "scripts":[
      "lib/browser-polyfill.js",
      "script/background.js"
    ],
    "persistent": false
  }
}
